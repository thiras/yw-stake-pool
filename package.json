{
  "private": true,
  "scripts": {
    "clean": "pnpm clean:builds && pnpm clean:deps && pnpm install:all && pnpm rebuild",
    "clean:builds": "pnpm programs:clean && rm -rf clients/js/dist example/dist && echo '✓ Build artifacts cleaned'",
    "clean:deps": "rm -rf node_modules clients/js/node_modules example/node_modules && echo '✓ Dependencies cleaned'",
    "install:all": "pnpm install && cd clients/js && pnpm install && pnpm build && cd ../.. && cd example && pnpm install && cd .. && echo '✓ Dependencies installed and client built'",
    "rebuild": "pnpm generate && cd clients/js && pnpm build && echo '✓ Client rebuilt'",
    "programs:build": "zx ./scripts/program/build.mjs",
    "programs:test": "zx ./scripts/program/test.mjs",
    "programs:clean": "zx ./scripts/program/clean.mjs",
    "programs:format": "zx ./scripts/program/format.mjs",
    "programs:lint": "zx ./scripts/program/lint.mjs",
    "programs:deploy": "zx ./scripts/program/deploy.mjs",
    "programs:deploy:devnet": "zx ./scripts/program/deploy.mjs --cluster devnet",
    "programs:transfer-authority": "zx ./scripts/program/transfer-authority.mjs",
    "programs:pool:transfer-authority": "zx scripts/program/pool-transfer-authority.mjs",
    "programs:pool:accept-authority": "zx scripts/program/pool-accept-authority.mjs",
    "generate:idls": "zx ./scripts/generate-idls.mjs",
    "solana:check": "zx ./scripts/check-solana-version.mjs",
    "solana:link": "zx ./scripts/link-solana-version.mjs",
    "generate": "pnpm generate:idls && pnpm generate:clients",
    "generate:clients": "zx ./scripts/generate-clients.mjs",
    "validator:start": "zx ./scripts/start-validator.mjs",
    "validator:restart": "pnpm validator:start --restart",
    "validator:stop": "zx ./scripts/stop-validator.mjs",
    "clients:js:format": "zx ./scripts/client/format-js.mjs",
    "clients:js:lint": "zx ./scripts/client/lint-js.mjs",
    "clients:js:publish": "zx ./scripts/client/publish-js.mjs",
    "clients:js:test": "zx ./scripts/client/test-js.mjs",
    "example:build": "cd example && pnpm build",
    "example:simple": "cd example && pnpm simple",
    "example:pool-admin": "cd example && pnpm pool-admin",
    "example:user-staking": "cd example && pnpm user-staking",
    "example:devnet": "cd example && pnpm devnet-test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@codama/nodes-from-anchor": "^1.0.0",
    "@codama/renderers-js": "^1.0.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@iarna/toml": "^2.2.5",
    "@metaplex-foundation/shank-js": "^0.1.7",
    "codama": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "typescript": "^5.5.2",
    "zx": "^7.2.3"
  },
  "engines": {
    "node": ">=v20.0.0"
  },
  "lint-staged": {
    "client/js/**/*.{ts,js}": [
      "pnpm clients:js:lint",
      "pnpm clients:js:format --write"
    ],
    "program/**/**.{ts,rs}": [
      "pnpm programs:lint",
      "pnpm programs:format --fix"
    ]
  },
  "packageManager": "pnpm@9.1.0"
}
